@font-face {
  font-family: 'icomoon';
  src:url('<%= Rails.configuration.action_controller.asset_host %>/assets/icomoon.eot');
  src:url('<%= Rails.configuration.action_controller.asset_host %>/assets/icomoon.eot?#iefix') format('embedded-opentype'),
    url('<%= Rails.configuration.action_controller.asset_host %>/assets/icomoon.woff') format('woff'),
    url('<%= Rails.configuration.action_controller.asset_host %>/assets/icomoon.ttf') format('truetype'),
    url('<%= Rails.configuration.action_controller.asset_host %>/assets/icomoon.svg#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-steam:before {
  content: "\e600";
}
.icon-lastfm:before {
  content: "\e601";
}
.icon-github:before {
  content: "\e602";
}
.icon-book:before {
  content: "\e603";
}
.icon-mail:before {
  content: "\e604";
}