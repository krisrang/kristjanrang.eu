body {
  font-family: "PT Sans", sans-serif;
  font-weight: 400;
  font-size: 24px;
  line-height: 1.4;
  background: #333;
  color: #999;
  margin: 128px 64px;
  -webkit-font-smoothing: antialiased;
}

ol, ul {
  list-style: none;
}

a {
  text-decoration: none;
  color: #FFF;

  &:hover {
    color: #999;
  }
}

h1 {
  font-size: 48px;
  line-height: 1.2;
  margin-bottom: 1em;
  max-width: 600px;
  font-weight: 400;

   strong {
    font-weight: 700;
    color: #FFF;
  }
}

.skills {
  font-style: italic;
}

.contact {
  margin-top: 4em;
  font-size: 16px;

  h1 {
    font-size: 24px;
    margin-top: 2em;
    margin-bottom: 0.5em;
  }

  p {
    margin: 1em 0;
  }
}

.internet {
  margin: 0;
  padding: 0;
  border: 0;
  overflow: hidden;
  *zoom: 1;

  li {
    list-style-image: none;
    list-style-type: none;
    margin-left: 0;
    display: -moz-inline-stack;
    display: inline-block;
    vertical-align: middle;
    *vertical-align: auto;
    zoom: 1;
    *display: inline;
    white-space: nowrap;
    margin-right: 1em;
  }
}

.cat {
  position: fixed;
  bottom: 0;
  right: 0;
}

@media only screen and (max-width: 1280px) {
  body {
    margin: 80px 10px 10px 50px;
  }
}

@media only screen and (max-width: 760px) {
  body {
    margin: 40px 5px 5px 25px;
    font-size: 18px;
    max-width: 400px;
  }

  h1 {
    font-size: 32px;
  }

  .contact {
    font-size: 14px;
  }
}

@media only screen and (max-width: 350px) {
  .cat {
    display: none;
  }
}